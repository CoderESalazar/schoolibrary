@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
   
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
           
    <meta name="viewport" content="width=device-width" />
    <title>Northcentral Library</title>

    <link rel="shortcut icon" href="/Images/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/Images/favicon.ico" type="image/x-icon" />
    
    @*<link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">*@

    <link href="/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="/Content/jquery-ui-1.10.4.custom.css" rel="stylesheet" type="text/css" />
    <link href="/Content/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" type="text/css" />
    <link href="/Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css" />
    <script src="/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    @*newly compressed file below for testing*@
    <script src="/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="/Scripts/library.js" type="text/javascript"></script>
    @*newly compressed file below for testing*@
    <script src="/Scripts/library.min.js" type="text/javascript"></script>
    <script src="/Scripts/jquery-ui-1.10.4.custom.js" type="text/javascript"></script>
    <script src="/Scripts/jquery-ui-1.10.4.custom.min.js" type="text/javascript"></script>
    
</head>
<body style="background-color: #EDEDED;">

    @Html.Partial("_menuTop")
    
    @*render the body*@

    <div class="container" style="background-color: White;">
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
    </div>

    @*end of body *@



    @*start of footer*@


<div class="container">
<div class="row">       
    <div class="col-md-12" style="background-color:  #003366; font-size: smaller;">
            
        <footer>

                <table style="width: 100%; background-color:  #003366;">
                    <tr>
                        <td style="text-align: center; color: White;">@Html.Partial("_LibFooter")</td>       
                    </tr>

                </table>
        </footer>
    </div>

</div>
</div>

    @*end of footer*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap.js")
    @RenderSection("scripts", required: false)
</body>
</html>

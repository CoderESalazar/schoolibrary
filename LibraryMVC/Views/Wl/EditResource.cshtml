@model LibraryMVC4.Models.wl

@{
    ViewBag.Title = "EditResource";
    Layout = "~/Views/Shared/_adminTemplate.cshtml";
}

@Html.ActionLink("Back to WL Page", "getwlpage", new { id = (int)ViewBag.structId })

<h2>Edit Resource</h2>
<br />

@using (Html.BeginForm("UpdateResource", "wl", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <fieldset>
        <span style="color: red;">@Html.ValidationMessageFor(item => item.Title)</span>
        Resource Title: @Html.TextBoxFor(item => item.Title, new { @style = "width: 500px;" })

        <br />
        <br />
        <span style="color: red;">@Html.ValidationMessageFor(item => item.GetUrl)</span>
        Resource URL: @Html.TextBoxFor(item => item.GetUrl, new { @style = "width: 500px;" })

        <br />
        <br />
        URL Description: 

        <div>
            @Html.TextAreaFor(item => item.ResourceText)
        </div>
        @*<br />

        Display Order: @Html.TextBoxFor(item => item.DisplayOrder, new { @style = "width: 50px;" })*@

        <br />
        <br />

        @Html.HiddenFor(item => item.ParentId)
        @Html.HiddenFor(item => item.PrimaryKey)
        @Html.Hidden("HighId", (int)ViewBag.structId)

        <input type="submit" id="submit" value="Update" />

    </fieldset>

}
<div align="right">
    @using (Html.BeginForm("deleteresource", "wl", FormMethod.Post))
    {
        @Html.HiddenFor(item => item.PrimaryKey)
        @Html.HiddenFor(item => item.ParentId)
        @Html.Hidden("HighId", (int)ViewBag.structId)

        <button type="submit" onclick="return confirm('Do you want to Delete?')">Delete</button>
    }
</div>





